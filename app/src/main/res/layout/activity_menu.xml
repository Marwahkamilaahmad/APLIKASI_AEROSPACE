<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo_gmat2"
        android:layout_marginBottom="40dp"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="data telemetry"
        android:fontFamily="@font/poppins"
        android:backgroundTint="@color/merah1"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:paddingHorizontal="20dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:id="@+id/button_telemetry"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="alarm system"
        android:textSize="22sp"
        android:fontFamily="@font/poppins"
        android:backgroundTint="@color/merah1"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="20dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:id="@+id/button_alarm"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="robot pathfinding"
        android:layout_marginTop="10dp"
        android:textSize="22sp"
        android:paddingHorizontal="20dp"
        android:fontFamily="@font/poppins"
        android:backgroundTint="@color/merah1"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:id="@+id/button_pathfinding"
        />
</LinearLayout>

</LinearLayout>